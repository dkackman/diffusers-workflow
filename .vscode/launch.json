{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "purpose": [
        "debug-test"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "validate file",
      "type": "debugpy",
      "request": "launch",
      "module": "dh.validate",
      "cwd": "${workspaceFolder}/",
      "justMyCode": true,
      "args": [
        "./examples/${input:workflowName}.json"
      ]
    },
    {
      "name": "test",
      "type": "debugpy",
      "request": "launch",
      "module": "dh.test",
      "cwd": "${workspaceFolder}/",
      "justMyCode": true
    },
    {
      "name": "test-with-variable",
      "type": "debugpy",
      "request": "launch",
      "module": "dh.run",
      "cwd": "${workspaceFolder}/",
      "justMyCode": true,
      "args": [
        "./dh/test_job.json",
        "prompt=an orange",
        "num_images_per_prompt=4"
      ]
    },
    {
      "name": "scratch",
      "type": "debugpy",
      "request": "launch",
      "module": "dh.run",
      "cwd": "${workspaceFolder}/",
      "justMyCode": true,
      "args": [
        "--log_level",
        "INFO",
        "./examples/scratch.json"
      ]
    },
    {
      "name": "ask",
      "type": "debugpy",
      "request": "launch",
      "module": "dh.run",
      "cwd": "${workspaceFolder}/",
      "justMyCode": true,
      "args": [
        "./examples/${input:workflowName}.json"
      ]
    }
  ],
  "inputs": [
    {
      "id": "workflowName",
      "type": "promptString",
      "description": "Enter the workflow name:",
      "default": "scratch"
    }
  ]
}